@model IEnumerable<MvcMusicStore.Models.Band>

@{
    ViewBag.Title = "Bands";
}

<h2>Bands</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            Picture
        </th>
        <th>
            WebPage
        </th>
        <th>
            Albums
        </th>
        <th>
            Artists
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.Email
        </td>
        <td>
			@item.Picture
        </td>
        <td>
			@item.WebPage
        </td>
        <td>
			@(item.Albums == null ? "None" : string.Join(", ", item.Albums.Select(x=>x.Name).ToArray()))
        </td>
        <td>
			@(item.Artists == null ? "None" : string.Join(", ", item.Artists.Select(x => x.Name).ToArray()))
        </td>
    </tr>
}

</table>


