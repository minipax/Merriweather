@model IEnumerable<MvcMusicStore.Models.Song>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Album
        </th>
        <th>
            Name
        </th>
        <th>
            Href
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@(item.Album == null ? "None" : item.Album.Name)
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.Href
        </td>
    </tr>
}

</table>


